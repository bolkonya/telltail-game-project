{
  "name": "bolkonyashka-task-2018",
  "version": "1.0.0",
  "description": "Project \"Telltail Games\" for the second semester of Yandex special course \"Development of interfaces\"",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:ts": "tsc",
    "build:srg": "copyfiles --up 1 \"./public/**/*\" dist/client",
    "build:next": "next build",
    "ci:heroku:build": "docker build --rm=false -t registry.heroku.com/bolkonyashka-task-2018/web .",
    "ci:heroku:login": "docker login -u $HEROKU_LOGIN -p $HEROKU_TOKEN registry.heroku.com",
    "ci:heroku:push": "docker push registry.heroku.com/bolkonyashka-task-2018/web:latest",
    "ci:heroku:release": "chmod u+x ./scripts/release.sh && ./scripts/release.sh bolkonyashka-task-2018",
    "ci:surge": "surge -p ./dist/client -d bolkonyashka-task-2018.surge.sh",
    "deps:all": "npm ci",
    "deps:production": "npm ci --production",
    "docker:build": "docker build -t bolkonyashka-task-2018 .",
    "docker:run": "docker run --env-file .env -p 8080:80 bolkonyashka-task-2018",
    "heroku:login": "heroku container:login",
    "heroku:push": "heroku container:push web",
    "heroku:release": "heroku container:release web",
    "heroku:open": "heroku open",
    "heroku": "npm-run-all heroku:*",
    "heroku-init": "heroku login && heroku create bolkonyashka-task-2018",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint --fix pages/**/*.css components/**/*.css",
    "lint:es": "eslint --fix --ext=.ts,.tsx,.js server/ config/ pages/ components/",
    "lint:ts": "tslint --project .",
    "start": "cross-env NODE_PATH=dist/server node dist/server",
    "surge": "surge -p ./dist/client -d bolkonyashka-task-2018.surge.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bolkonyashka/Bolkonyashka-task-2018.git"
  },
  "author": "Bessonov Roman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bolkonyashka/Bolkonyashka-task-2018/issues"
  },
  "homepage": "https://github.com/Bolkonyashka/Bolkonyashka-task-2018#readme",
  "dependencies": {
    "@types/multer": "^1.3.7",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "body-parser": "^1.19.0",
    "config": "^3.1.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "hbs": "^4.0.4",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "next": "^8.1.0",
    "pg": "^7.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.15.1",
    "sequelize-typescript": "^1.0.0-beta.3",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.1",
    "@types/hbs": "^4.0.1",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/morgan": "^1.7.35",
    "@types/next": "^8.0.5",
    "@types/node": "^11.13.10",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "@types/react-router-dom": "^4.3.3",
    "@types/validator": "^10.11.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "copyfiles": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.3.0",
    "surge": "^0.20.5",
    "tslint": "^5.16.0"
  }
}
